<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:text="Work status"/>

    <TextView
        android:id="@+id/workstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="@dimen/abc_text_size_display_1_material"/>

    <FrameLayout
        android:layout_margin="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#6245a8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:text="Current work time"/>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="@dimen/abc_text_size_display_3_material"/>
    <TextView
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#6245a8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:text="Time remaining"/>

    <TextView
        android:id="@+id/countBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="@dimen/abc_text_size_display_3_material"/>

    <TextView
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#6245a8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:text="Last work time"/>

    <TextView
        android:id="@+id/lastTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="@dimen/abc_text_size_display_1_material"/>

    <!--<Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startStop"
        android:text="Start/Stop" />
        -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="@dimen/abc_text_size_display_3_material"
            android:layout_height="@dimen/abc_text_size_display_3_material"
            android:layout_gravity="center_horizontal|bottom"
            android:tint="@android:color/white"
            android:background="@drawable/oval"
            android:onClick="startStop"
            android:shadowColor="@color/ripple_material_light"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="15"
            android:src="@android:drawable/ic_media_play"/>
    </FrameLayout>

    <!--  <Button
          android:id="@+id/button2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:onClick="getdbdata"
          android:text="getrow" />

      <Button
          android:id="@+id/button3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:onClick="resetDB"
          android:text="resetdb" />
     -->

</LinearLayout>
